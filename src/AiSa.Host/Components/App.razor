<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <base href="/" />
    <ResourcePreloader />
    <link rel="stylesheet" href="@Assets["css/tokens.css"]" />
    <link rel="stylesheet" href="@Assets["css/layout.css"]" />
    <link rel="stylesheet" href="@Assets["css/components.css"]" />
    <link rel="stylesheet" href="@Assets["app.css"]" />
    <link rel="stylesheet" href="@Assets["AiSa.Host.styles.css"]" />
    <ImportMap />
    <title>AiSa Portal - Enterprise GenAI Solution Architecture</title>
    <link rel="icon" type="image/png" href="images/logo-app.png" />
    <HeadOutlet />
    <script>
        // Initialize theme from localStorage before Blazor loads to prevent flash
        (function() {
            try {
                const savedTheme = localStorage.getItem('theme');
                const theme = (savedTheme === 'light' || savedTheme === 'dark') ? savedTheme : 'dark';
                const html = document.documentElement;
                const body = document.body;
                if (html) {
                    html.classList.remove('theme-dark', 'theme-light');
                    html.classList.add('theme-' + theme);
                }
                if (body) {
                    body.classList.remove('theme-dark', 'theme-light');
                    body.classList.add('theme-' + theme);
                }
            } catch (e) {
                // localStorage not available, use default dark theme
                const html = document.documentElement;
                const body = document.body;
                if (html) {
                    html.classList.remove('theme-dark', 'theme-light');
                    html.classList.add('theme-dark');
                }
                if (body) {
                    body.classList.remove('theme-dark', 'theme-light');
                    body.classList.add('theme-dark');
                }
            }
        })();
    </script>
</head>

<body>
    <Routes @rendermode="InteractiveServer" />
    <ReconnectModal />
    <script src="@Assets["_framework/blazor.web.js"]"></script>
    <FluentDesignTheme />
</body>

</html>
