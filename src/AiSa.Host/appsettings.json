{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Chunking": {
    "Mode": "Basic",
    "ChunkSizeTokens": 800,
    "OverlapTokens": 100,
    "MinChunkTokens": 50,
    "Advanced": {
      "TokenizerModel": "cl100k_base",
      "ImproveSentenceSplitting": true
    }
  },
  "AzureOpenAI": {
    "Endpoint": "",
    "DeploymentName": "text-embedding-ada-002",
    "LLMDeploymentName": "gpt-4",
    "ApiKey": ""
  },
  "AzureSearch": {
    "Endpoint": "",
    "IndexName": "aisa-documents",
    "ApiKey": "",
    "VectorSimilarityMetric": "cosine",
    "SearchTimeoutSeconds": 10,
    "IndexTimeoutSeconds": 30
  },
  "Performance": {
    "Cache": {
      "DefaultTtlHours": 1,
      "MaxEntries": 100
    },
    "Streaming": {
      "Enabled": false,
      "EnableAutomaticFallback": true,
      "TimeoutSeconds": 60
    }
  },
  "Security": {
    "AllowDetectedThreats": true,
    "MaxInputLength": 5000,
    "RateLimiting": {
      "ChatRequestsPerMinute": 10,
      "DocumentUploadsPerMinute": 5
    }
  },
  "Resilience": {
    "AzureOpenAI": {
      "Retry": {
        "MaxRetryAttempts": 3,
        "BaseDelaySeconds": 1.0,
        "BackoffType": "Exponential"
      },
      "Timeout": {
        "LLMSeconds": 60,
        "EmbeddingSeconds": 30
      },
      "CircuitBreaker": {
        "FailureThreshold": 5,
        "SamplingDurationSeconds": 30,
        "MinimumThroughput": 2,
        "BreakDurationSeconds": 60
      }
    },
    "AzureSearch": {
      "Retry": {
        "MaxRetryAttempts": 2,
        "BaseDelaySeconds": 0.5,
        "BackoffType": "Exponential"
      },
      "Timeout": {
        "SearchSeconds": 10,
        "IndexSeconds": 30
      }
    }
  }
}
